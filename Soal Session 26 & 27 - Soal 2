#include <stdio.h>
#include <stdlib.h>

int main() {
    int *nilai;
    int n, total = 0;
    float rata_rata;
    
    // Jumlah siswa
    printf("Masukkan jumlah siswa: ");
    scanf("%d", &n);
    
    // Alokasi memori
    nilai = (int*)malloc(n * sizeof(int));
    if (nilai == NULL) {
        printf("Memory allocation failed!\n");
        return 1;
    }
    
    // Input nilai siswa
    for (int i = 0; i < n; i++) {
        printf("Masukkan nilai mahasiswa ke-%d: ", i + 1);
        scanf("%d", &nilai[i]);
        total += nilai[i];
    }
    
    // Hitung > tampilkan rata-rata
    rata_rata = (float)total / n;
    printf("\nRata-rata nilai: %.2f\n", rata_rata);
    
    free(nilai);
    
    return 0;
}
